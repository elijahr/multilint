root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
binary_next_line   = true
switch_case_indent = true
space_redirects    = true
keep_padding       = false
function_next_line = true
never_split        = true

[*.sh]
shell_variant      = posix

[*.py]
indent_size = 4

[tools/.bundle]
ignore = true
[tools/asdf]
ignore = true
[tools/bin]
ignore = true
[tools/node_modules]
ignore = true
[tools/uncrustify-*]
ignore = true
